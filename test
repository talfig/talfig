    <script>
        async function fetchGitHubData() {
            const response = await fetch('https://api.github.com/users/talfig');
            const data = await response.json();
            // Update the SVG elements with the fetched data
            document.getElementById('star-count').textContent = data.public_repos; // Example: replace with actual value
            // Similarly, update other elements based on API response
        }

        // Fetch and update data every 10 minutes
        fetchGitHubData();
        setInterval(fetchGitHubData, 10 * 60 * 1000);
